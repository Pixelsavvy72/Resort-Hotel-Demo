@using ResortHotelRev2.Models.EntityManager;
@{
    ViewBag.Title = "Welcome";
}

<h2>Hello, <b>@Context.User.Identity.Name</b>.<br /> Thank you for choosing the Overlook Resort Hotel.</h2>

<br />
@Html.ActionLink("Make a Reservation", "Reservation", "Reservation") | 
@Html.ActionLink("Edit Profile", "EditProfile", "Home") | 
@Html.ActionLink("Signout", "SignOut", "Account") 

<br /> 

<!--Add account managment link if logged in as Admin-->
@if (Context.User.Identity.IsAuthenticated)
{
    UserManager UM = new UserManager();
    if (UM.IsUserInRole(Context.User.Identity.Name , "Admin"))
    {
        @Html.ActionLink("Account Management", "AdminOnly", "Home")
    }
}




