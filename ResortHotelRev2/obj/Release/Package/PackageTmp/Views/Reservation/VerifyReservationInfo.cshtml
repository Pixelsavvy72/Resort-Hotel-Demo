@model ResortHotelRev2.Models.ViewModel.RoomAndReservationModel
        
@{
    ViewBag.Title = "VerifyReservationInfo";

}

<div>
    
    <h2>Verify Reservation Information</h2>

    

    @using (Html.BeginForm("PlaceReservation", "Reservation", FormMethod.Post))
    {
        


        <input type="submit" name="PlaceReservation" value="Place This Reservation" class="btn btn-primary btn-lg" />
        
        <div>
            <h4>ReservationView</h4>
            <hr />
    
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Check In")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CheckIn, "{ 0:MM/dd/yyyy }")
                    @Html.HiddenFor(model => model.CheckIn)
                </dd>
                <dt>
                    @Html.DisplayName("Check Out")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CheckOut, "{ 0:MM/dd/yyyy }")
                    @Html.HiddenFor(model => model.CheckOut)
                </dd>
                <dt>
                    @Html.DisplayName("First Name")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FirstName)
                    @Html.HiddenFor(model => model.FirstName)
                </dd>
                <dt>
                    @Html.DisplayName("Last Name")

                </dt>
                <dd>
                    @Html.DisplayFor(model => model.LastName)
                    @Html.HiddenFor(model => model.LastName)
                </dd>

                <dt>
                    @Html.DisplayName("Guest Phone")
                </dt>
                <dd>                    
                    @Html.DisplayFor(model => model.PhoneNumber)
                    @Html.HiddenFor(model => model.PhoneNumber)
                </dd>
                <dt>
                    @Html.DisplayName("Guest Id")
                </dt >
                <dd>
                    @Html.DisplayFor(model => model.GuestId)
                    @Html.HiddenFor(model => model.GuestId)
                </dd >

                <dt>
                    @Html.DisplayName("Reservation Placed")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MadeBy)
                    @Html.HiddenFor(model => model.MadeBy)
                </dd >
                <dt>

                </dt>
                <!--Pass each room to ReservationManager / AddReservation-->
                <dd>
                    @for(int i = 0; i < Model.RoomResRmProfile.Count; i++)
                    {
                        @Html.HiddenFor(model => Model.RoomResRmProfile[i].CheckIn)
                        @Html.HiddenFor(model => Model.RoomResRmProfile[i].CheckOut)
                        
                        @Html.HiddenFor(model => Model.RoomResRmProfile[i].RoomId)
                    }
                </dd>


            </dl>


        </div>

        <div>

            <h3> You have selected the following room options:</h3><br/>

                <table class="table table-striped table-condensed table-hover">
                    
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Style</th>
                            <th>Occupancy</th>
                            <th>King Beds</th>
                            <th>Queen Beds</th>
                            <th>Smoking</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.RoomResRmProfile.Count; i++)

                        {

                            <tr>
                                @*TODO: Verify the picture works in live environment.*@
                                <td><img src="~/Content/images/RoomPics/@Html.DisplayFor(r => r.RoomResRmProfile[i].Image)" width="175" height="120" /></td>
                                <td>@Html.HiddenFor(r => r.RoomResRmProfile[i].RoomId)</td>
                                <td>@Html.DisplayFor(r => r.RoomResRmProfile[i].RoomType)</td>
                                <td>@Html.DisplayFor(r => r.RoomResRmProfile[i].Occupancy)</td>
                                <td>@Html.DisplayFor(r => r.RoomResRmProfile[i].KingBeds)</td>
                                <td>@Html.DisplayFor(r => r.RoomResRmProfile[i].QueenBeds)</td>
                                <td>@Html.DisplayFor(r => r.RoomResRmProfile[i].Smoking)</td>
                                <td>@Html.DisplayFor(r => r.RoomResRmProfile[i].RoomDescription)</td>




                            </tr>
                        }
                    </tbody>
                </table>
            
    
    
        </div>
    
    }

</div> 

<div>
    @Html.ActionLink("Back to Main", "Index", "Home")
</div>  
